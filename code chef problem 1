/*
https://www.codechef.com/problems/CHEFSTUD
*/


#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int main()
{
int t;
cin>>t;
while(t--)
{
string s;
cin>>s;
int count=0;
int n=s.length();
for(int i=1;i<n;i++)
{
if(s[i-1]=='<' && s[i]=='>')
++count;
}
cout<<count<<endl;
}
return 0;
}
