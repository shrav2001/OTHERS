/*
https://www.codechef.com/FEB20B/problems/SNUG_FIT
*/
#include<iostream>
#include<iomanip>
#include<bits/stdc++.h>
using namespace std;
int main()
{
int t;
cin>>t;
while(t--)
{
int n,i,sum=0;
cin>>n;
int a[n],b[n],area[n];
for(i=0;i<n;i++)
{
cin>>a[i];
}
for(i=0;i<n;i++)
{
cin>>b[i];
}
for(i=0;i<n;i++)
{
if(a[i]<=b[n-1-i])
sum=sum+a[i];
else
sum=sum+b[n-1-i];
}
cout<<sum<<endl;
}
return 0;
}
